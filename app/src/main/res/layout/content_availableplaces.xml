<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.warunakavinda.parkingmate.availableplaces"
    tools:showIn="@layout/acplaces">

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Model Park 2"
        android:id="@+id/button2"
        android:textSize="20dp"
        android:onClick="sliit"
        android:background="?attr/colorPrimary"
        android:textColor="#ffffff"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Available Destinations"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Majestic City"
        android:id="@+id/button3"
        android:textSize="20dp"
        android:onClick="mc"
        android:background="?attr/colorPrimary"
        android:textColor="#ffffff"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Liberty Plaza"
        android:id="@+id/button4"
        android:textSize="20dp"
        android:onClick="lb"
        android:background="?attr/colorPrimary"
        android:textColor="#ffffff"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Savoy Cinema"
        android:id="@+id/button5"
        android:textSize="20dp"
        android:onClick="sov"
        android:background="?attr/colorPrimary"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Model Park 1"
        android:id="@+id/button7"
        android:textSize="20dp"
        android:onClick="mp"
        android:background="?attr/colorPrimary"
        android:textColor="#ffffff"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

        <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton"
        android:onClick="home"
        android:text="Home"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
            android:background="#d2ddf7" />


</RelativeLayout>
